#contributions
  %h1= t("contribution.thought_about_contributing")
  .row
    .span5
      = t("contribution.thought_about_contributing_description_html")
      %p#thanks= t("contribution.thanks")
      = image_tag("loomio-orange-header.png", :alt => "Loomio")

    .span4
      #monthly
        %h2= t("contribution.monthly_html")
        .btns
          -{'2075FEF1BEC98C' => 2,
            '12400461853BF0' => 5,
            '2075FEF58DCF04' => 10,
            '2075FEF5E985BC' => 20,
            'A57235C1CC0' => 50}.each_pair do |contract_id, amount|
            %a{:href => "https://subscription.swipehq.com/?contract_id=#{contract_id}", class: "btn btn-info"} $#{amount}

      #one-time
        %h2= t("contribution.one_time_html")
        .btns
        -{'2075FF091C58D9' => 5,
          '11D4D81D5D1CD' => 10,
          '40A09D315772A' => 20,
          '195B19EB700CE8' => 50,
          '195B19EBAAFC87' => 100}.each_pair do |product_id, amount|
          %a{:href => "https://payment.swipehq.com/?product_id=#{product_id}", class: "btn btn-info"} $#{amount}

      #any-amount
        %h2= t("contribution.any_amount")
        =form_tag(contributions_path) do
          .input-prepend
            %span.add-on= '$'
            %input.input-mini{:name => "amount", :type => "text"}
            =select_tag(:currency, options_for_select(SwipeWrapper::CURRENCIES), class: 'input-small')
          %input{type: 'submit', value: 'submit', class: "btn btn"}
